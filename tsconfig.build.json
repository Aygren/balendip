{
    "extends": "./tsconfig.json",
    "exclude": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**",
        "**/__mocks__/**",
        "jest.config.js",
        "jest.setup.js",
        ".next/**",
        "node_modules/**"
    ],
    "compilerOptions": {
        "noEmit": false,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}